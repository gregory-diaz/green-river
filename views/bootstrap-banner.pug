mixin bootstrap-banner
    div(id="myCarousel" class="carousel slide" data-ride="carousel")
        ol(class="carousel-indicators")
            li(data-target="#myCarousel" data-slide-to="0" class="active")
            li(data-target="#myCarousel" data-slide-to="1")
            li(data-target="#myCarousel" data-slide-to="2")

        div(class="carousel-inner")
            div(class="item active")
                img( src="https://www.w3schools.com/bootstrap/chicago.jpg" alt="Los Angeles")
            div(class="item")
                img(src="https://www.w3schools.com/bootstrap/ny.jpg" alt="Chicago")
            div(class="item")
                img(src="https://www.w3schools.com/bootstrap/la.jpg" alt="New York")
            
        a(class="left carousel-control" href="#myCarousel" data-slide="prev")
            span(class="glyphicon glyphicon-chevron-left arrows")
        a(class="right carousel-control" href="#myCarousel" data-slide="next")
            span(class="glyphicon glyphicon-chevron-right arrows")
            span(class="sr-only") Next
