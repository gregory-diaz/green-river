mixin bootstrap-banner
    div(id="myCarousel" class="carousel slide" data-ride="carousel") 
        ol(class="carousel-indicators" id="carouselIndicators")
            li(data-target="#myCarousel" data-slide-to="0" class="active")
            li(data-target="#myCarousel" data-slide-to="1")
            li(data-target="#myCarousel" data-slide-to="2")
        div(class="carousel-inner")
            div(class="item active")
                img( src="https://www.w3schools.com/bootstrap/chicago.jpg" alt="Los Angeles")
            div(class="item")
                img(src="https://www.w3schools.com/bootstrap/ny.jpg" alt="Chicago")
            div(class="item")
                img(src="https://www.w3schools.com/bootstrap/la.jpg" alt="New York")
    


            
        